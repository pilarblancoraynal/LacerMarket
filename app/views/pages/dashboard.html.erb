<h1>Dashboard</h1>
<div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a href="#storico">Storico</a></li>
        <li class="tab col s3"><a href="#vendita">In vendita</a></li>
      </ul>
    </div>
    <div id="test1" class="col s12">
    	<h4>Vendite</h4>
	    	<table>
		    		<thead>
		    			<tr>
		    				<th>Nome</th>
		    				<th>Prezzo</th>
		    				<th>Data di creazione</th>
		    				<th>Azione</th>
		    			</tr>
		    		</thead>
		    			<tbody>
		    				<% @content.each do |content| %>
		    				<tr>
			    				<th><%= link_to content.titolo, content_path(content) %></th>
			    				<th><%= content.price %></th>
			    				<th><%= content.created_at %></th>
			    				<th><%= link_to "Modifica", edit_content_path(content) %> | <%=link_to "Elimina", content, method: :delete, data: { confirm: 'Sei sicuro di eliminare questo contenuto?' } %></th>
		    				</tr>
		    				<% end %>
		    			</tbody>
		    	</table>	
		<h4>Acquisti</h4>
			<table>
		    		<thead>
		    			<tr>
		    				<th>Content-ID</th>
		    				<th>Prezzo</th>
		    				<th>Data</th>
		    				<th>Acquirente</th>
		    			</tr>
		    		</thead>
		    			<tbody>
		    				<% @sales.each do |sale| %>
		    				<tr>
			    				<th><%= sale.content_id %></th>
			    				<th><%= sale.amount %></th>
			    				<th><%= time_ago_in_words(sale.created_at) %></th>
			    				<th><%= sale.email_acquirente %></th>
		    				</tr>
		    				<% end %>
		    			</tbody>
		    	</table>	


    </div>
	    <div id="vendita" class="col s12">
	    	<table>
	    		<thead>
	    			<tr>
	    				<th>Nome</th>
	    				<th>Prezzo</th>
	    				<th>Data di creazione</th>
	    				<th>Azione</th>
	    			</tr>
	    		</thead>
	    			<tbody>
	    				<% @content.each do |content| %>
	    				<tr>
		    				<th><%= link_to content.titolo, content_path(content) %></th>
		    				<th><%= content.price %></th>
		    				<th><%= content.created_at %></th>
		    				<th><%= link_to "Modifica", edit_content_path(content) %> | <%=link_to "Elimina", content, method: :delete, data: { confirm: 'Sei sicuro di eliminare questo contenuto?' } %></th>
	    				</tr>
	    				<% end %>
	    			</tbody>
	    	</table>	
	    </div>
  </div>