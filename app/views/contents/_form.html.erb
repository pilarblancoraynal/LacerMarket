<%= form_with(model: content, local: true, html: { multipart: true }) do |form| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h4><b><%= pluralize(content.errors.count, "error") %> non permettono al form di essere inviato:</b></h4>

      <ul>
      <% content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label class="grey-text">Carica il contenuto digitale che vuoi vendere (formati supportati: PowerPoint, Excel, Word, PDF, Immagini e MP3)</label>
    <br>
    <%= form.file_field :allegato %>
  </div>
  <br>
  <div class="field">
    <%= form.label :Titolo %>
    <%= form.text_field :titolo, id: :content_titolo %>
  </div>

  <div class="field">
    <%= form.label :Descrizione %>
    <%= form.text_area :descrizione, id: :content_descrizione, class: "materialize-textarea" %>
  </div>

  <div class="field">
    <%= form.label :prezzo_min_50_cent %>
    <%= form.text_field :price, id: :content_price %>
  </div>

  <div class="field">
    <label class="grey-text">Carica un'immagine da utilizzare come cover per il tuo contenuto</label>
    <br>
    <%= form.file_field :cover %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit 'Salva Contenuto', class: "btn btn-form" %>
  </div>
  <br>
<% end %>
